doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}
  body 
    include layout.pug 

    h1 Transaction History 

    .box 
      each transaction in transactions
        p#history 
          |  Transaction Successful:: AMOUNT: #{transaction.amount}-SENDER: #{transaction.sendername}-RECIEVER:#{transaction.recievername}-#{transaction.date}